apiVersion: apps/v1
kind: Deployment
metadata:
  name: activity-app-${APPLICATION_ENV}
  namespace: ${APPLICATION_ENV}
  labels:
    app: activity-app-${APPLICATION_ENV}
spec:
  replicas: 2
  selector:
    matchLabels:
      app: activity-app-${APPLICATION_ENV}
  template:
    metadata:
      labels:
        app: activity-app-${APPLICATION_ENV}
    spec:
      containers:
        - name: activity-app-${APPLICATION_ENV}
          image: docker.io/${DOCKER_HUB_USERNM}/activity:${APPLICATION_ENV}-${TRAVIS_COMMIT}
          imagePullPolicy: Always
          resources:
            limits:
              cpu: 250m
              memory: 256Mi
            requests:
              cpu: 125m
              memory: 128Mi
          ports:
          - containerPort: 8000
  